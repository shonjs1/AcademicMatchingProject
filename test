const { expect } = require('chai');
// const chai = require('chai');
// const chaiHttp = require('chai-http');
// const fetchUsers = require('./MatchMaker/fetchUsers')
const { matchUsers } = require('./MatchMaker/matchMaker')


describe('matchMaker', () => {
    it('should match users based on criteria', async () => {
        
        const matchedUsers = await matchUsers();
        expect(matchedUsers.allPairs).to.be.an('array'); 
    });
});

